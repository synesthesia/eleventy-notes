{
  "$schema": ".app/app.schema.json",
  "title": "My Digital Garden",
  "description": "An evolving set of notes by Synesthesia.",
  "theme": {
    "color": "ruby"
  },
  "editThisNote": {
    "url": "https://github.com/synesthesia/garden/edit/{{branch}}/{{file}}"
  },
  "customProperties": {
    "properties": [
      {
        "path": "props",
        "options": {
          "date": {
            "locale": "en-GB"
          }
        }
      }
    ]
  },
  "sidebar": {
    "links": [
      {
        "url": "https://www.synesthesia.co.uk/",
        "label": "My Main Site",
        "icon": "user"
      }
    ],
    "notes": [
      {
        "pattern": "^/[^/]+$"
      },
      {
        "pattern": "^/Writing/",
        "label": "Writing Notes",
        "expanded": false,
        "tree": {
          "replace": {
            "^/\\w+": ""
          }
        }
      },
      {
        "pattern": "^/Organizing/",
        "label": "Organizing Notes",
        "expanded": false
      },
      {
        "pattern": "^/Features/",
        "label": "Core Features",
        "expanded": false,
        "tree": {
          "replace": {
            "^/\\w+": ""
          }
        }
      },
      {
        "pattern": "^/Deployment/",
        "label": "Deployment",
        "expanded": false
      },
      {
        "pattern": "^/Releases/",
        "label": "Releases",
        "expanded": false
      }
    ]
  },
  "tags": {
    "map": {
      "dynamic-content": "dynamic content"
    }
  }
}
